@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="~/css/register.css" />
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>

            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
            <p class="label"> Email</p>
                <input  asp-for="Input.Email" class="form-control bg-info" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <p class="label">Password</p>
                <input  asp-for="Input.Password" class="form-control bg-info" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
               <p class="label">Confirm Password</p>
                <input  asp-for="Input.ConfirmPassword" class="form-control bg-info" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="bttn-reg">

            <button type="submit" class="w-100 btn btn-lg btn-warning text-dark">Register</button>
            </div>
        </form>
    </div>
    <footer>
        <img src="~/images/register-bottom-waves.png" width="100%" />
    </footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
