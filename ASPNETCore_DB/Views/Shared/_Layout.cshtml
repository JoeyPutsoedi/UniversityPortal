@using Microsoft.AspNetCore.Identity
@using ASPNETCore_DB.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPNETCore_DB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPNETCore_DB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/styles.css" />

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body class="m-auto">
    <header>

       
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-dark navbar-toggleable-sm">
                 
                <div class="container-fluid">
                    <div class="navbar-collapse collapse d-flex flex-row justify-content-between">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/cut-header-logo.png" width="100px" height="60px"/></a>
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            @if (!SignInManager.IsSignedIn(User) && !User.IsInRole("Admin") && !User.IsInRole("User"))
                            {
                              
                                <li class="nav-item" >
                                    <a  class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Student" asp-action="Contact">Contact</a>
                               </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="SeedDatabase">Database</a>
                            </li>

                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
                            {
                                <li class="nav-item" >
                                    <a class="nav-link text-light" asp-area="" asp-controller="Student" asp-action="Create">Enroll</a>
                                </li>
                              
                           }

                            @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <li class="nav-item" >
                                    <a class="nav-link text-light"  asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                                </li>
                            }

                            <partial name = "_LoginPartial" />
                        </ul>
                </div>
            </nav>
        </div>
    </header>

  
        <main role="main" class="pb-3">
            @RenderBody()
        </main> 


    <footer class="  footer text-muted w-100">
       
       @*<div class="container">
            &copy; 2023 - ASPNETCore_DB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
